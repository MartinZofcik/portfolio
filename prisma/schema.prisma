generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plant {
  id                String  @id @default(uuid())
  latin_name        String
  slovak_name       String?
  size              Size?
  description       String?
  age_months        Int?    @default(1)
  recommended_place String?
  leave_number      Int?
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}

enum Size {
  VERY_SMALL
  SMALL
  MEDIUM
  LARGE
  VERY_LARGE
}
